<div class="nav flex-column sidebar flex-shrink-0 pl-4" id="menu">
  {{#each units}}
    <div>
      <div class="d-flex">
      {{#unless this.units}} 
        <a href="{{this.target}}" class="p-2 {{#if isCurrentItem}} current-item {{/if}}">
          {{this.label}}
        </a>
      {{/unless}}
        
        {{#if this.units}}
        <a data-bs-toggle="collapse" href="#t-{{this.id}}" class="p-2 {{#if isCurrentItem}} current-item {{/if}}">
          {{this.label}}
        </a>
          <button class="btn btn-white" type="button"
            data-bs-toggle="collapse" data-bs-target="#t-{{this.id}}"
            aria-controls="{{this.id}}">
            <i class="fa fa-angle-down"></i>
          </button>
        {{/if }}
      </div>
      <div id="t-{{this.id}}"
        {{#if isCurrentLU }} class="show" {{/if}}
          {{#unless isCurrentLU }} class="collapse" {{/unless}}
        >
        <div class="px-1 d-flex flex-column tasks">
          {{#each this.units}}
            <a href="{{this.target}}" class="py-1 {{#if isCurrentItem}} current-item {{/if}}"> {{this.label}} </a>
          {{/each}}
        </div>
      </div>
    </div>
  {{/each}}
</div>